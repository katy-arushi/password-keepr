<!DOCTYPE html>
<html lang="en">

<head>
  <title>passwordb | edit password</title>
  <%- include('partials/_head') %>
  <link rel="stylesheet" href="/styles/forms.css" type="text/css"/>

</head>

<body class="background">
    <%- include('partials/_header') %>
  <div class="container">

    <div class="form">
      <p class="main-action-tagline"> Edit your password</p>

      <form class="row g-3" action="/api/accounts/<%= templateVars.id %>" method="POST">

        <div class="col-md-5">
          <input type="password" name="manual_password" class="form-control" placeholder="Enter  a password" aria-label="Enter a password">
        </div>
          <p id="or">OR</p>

        <!-- Button trigger modal -->
        <div class="col-md-5">
          <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#exampleModalCenter">Generate Password</button>
        </div>

        <div class="col-12" id="new-pass">
          <div class="input-group">
            <input type="text" name="generated_password" class="form-control" placeholder="Your new password is: "  arial-labe="generated password">
             <span id="copyButton" class="input-group-addon btn" title="Click to copy">
              <i class="fas fa-copy" aria-hidden="true"></i>
             </span>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Change Password</button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <div class="form">
                  <p class="main-action-tagline"> Generate random password</p>

                   <form id="password_gen" class="row g-3" action="/api/accounts/generate_password" method="POST">
                    <div class="col-12" id="new-pass">
                    <div class="wrapper">
                      <label for="passwordLength" class="title">Password Length:</label>
                      <input type="range" name="passwordLength" id="passwordLength" min="5" max="15" value="10" step="1" class="pwRange" oninput="showLength(this.value)"><span id ="length">10</span>
                        <script>
                           function showLength(newLength)
                            {
                              document.getElementById('length').innerHTML = newLength;
                            }
                         </script>
                    </div>

                    <div id="passwordChoice">
                      <div class="tickboxes">
                        <label for="upperCase" class="formLabel">Uppercase</label>
                          <input type="checkbox" name="upperCase" id="upperCaseBox">
                        <label for="lowerCase" class="formLabel">Lowercase</label>
                          <input type="checkbox" name="lowerCase" id="lowerCaseBox" class="lowerCase">
                          <br>
                        <label for="numbers" class="formLabel">Numbers</label>
                          <input type="checkbox" name="numbers" id="numbersBox">
                        <label for="symbols" class="formLabel">Symbols</label>
                          <input type="checkbox" name="symbols" id="symbolsBox">
                          </br>
                      </div>
                    </div>

                    <div class="text-center">
                      <button type="button" id= "genButton" class="btn btn-primary" data-dismiss="modal">Generate Password</button>
                     </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
       </form>
  </div>
</div>







